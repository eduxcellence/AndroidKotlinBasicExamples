<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Toast.PositioningToast.PositioningToastActivity">
    <Button
            android:id="@+id/toastLeft"
            android:text="TOAST LEFT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:layout_marginTop="15dp"
            android:onClick="toastClickPosition"


    />
    <Button
            android:layout_marginTop="15dp"
            android:id="@+id/toastRight"
            android:text="TOAST RIGHT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
    <Button
            android:layout_marginTop="15dp"
            android:id="@+id/toastTop"
            android:text="TOAST TOP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
    <Button
            android:text="TOAST BOTTOM"
            android:layout_marginTop="15dp"
            android:id="@+id/toastBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
    <Button
            android:layout_marginTop="15dp"
            android:id="@+id/toastTopLeft"
            android:text="TOAST TOP - LEFT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
    <Button
            android:layout_marginTop="15dp"
            android:id="@+id/toastCenter"
            android:text="TOAST CENTER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
    <Button
            android:text="TOAST TOP - RIGHT "
            android:layout_marginTop="15dp"
            android:id="@+id/toastTopRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectshape"
            android:onClick="toastClickPosition"


    />
</LinearLayout>