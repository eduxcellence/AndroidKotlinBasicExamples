<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Widgets.ProgressBar.ProgressActivity">
    <TextView android:text="Indeterminate Progress Bar"
              android:layout_width="match_parent"
              android:gravity="center"
              android:layout_marginTop="15dp"
              android:layout_height="wrap_content"/>

    <ProgressBar
            android:padding="15dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/progressBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:padding="15dp"
            android:id="@+id/progressBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/buttonProgressBar"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
    <Button app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/buttonProgressDialog"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>
</LinearLayout>