<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Widgets.Viewtag.ViewTag">
        <TextView android:text="Horizontal View Tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <View android:background="@color/colorPrimaryDark"
              android:layout_height="2dp"
              android:layout_marginTop="12dp"
              android:layout_width="match_parent"/>

        <View android:background="@color/colorPrimary"
              android:layout_height="12dp"
              android:layout_marginTop="55dp"
              android:layout_width="match_parent"/>

        <TextView android:layout_marginTop="55dp"
                  android:text="Vertical Width (space) View Tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <View android:background="@color/colorAccent"
              android:layout_height="100dp"

              android:layout_marginTop="12dp"
              android:layout_width="10dp"/>
        <TextView android:text="Rotation 120 Degree View Tag"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="55dp"
                  android:layout_height="wrap_content"/>
        <View android:background="@color/colorPrimaryDark"
              android:layout_height="2dp"
              android:rotation="120"
              android:layout_marginTop="12dp"
              android:layout_width="match_parent"/>
        <TextView android:text="Rotation 60 Degree View Tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <View android:background="@color/colorPrimaryDark"
              android:layout_height="2dp" android:rotation="60"
              android:layout_marginTop="12dp"
              android:layout_width="match_parent"/>
        <TextView android:text="Vertical View Tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
        <View android:background="@color/colorPrimaryDark"
              android:layout_height="160dp"
              android:layout_gravity="center"
              android:layout_marginTop="12dp"
              android:layout_marginBottom="80dp"
              android:layout_width="1dp"/>


    </LinearLayout>
</ScrollView>